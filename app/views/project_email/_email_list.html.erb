<% if emails.each_with_index do |email, i| %>
  <tr class="alt-<%= i % 2 %>">
    <td>
      <%= email.subject %>
    </td>
    <td>
      <%= email.body_summary 100 %>
    </td>
    <td>
      <% if defined? editable and editable then %>
        <%= link_to le(:link_edit), { :action => :compose, :project_id => @project.identifier, :email_id => email.id } %>
      <% else %>
        <%= link_to le(:link_view), { :action => :view, :project_id => @project.identifier, :email_id => email.id } %>
      <% end %>
    </td>
    <td>
      <%= link_to le(:link_delete), { :action => :delete, :project_id => @project.identifier, :email_id => email.id } %>
    </td>
  </tr>
  <% end.empty? %>
  <tr>
    <td colspan="4">
      <%= le(empty_message) %>
    </td>
  </tr>
<% end %>
